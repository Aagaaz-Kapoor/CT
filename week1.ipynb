   ],
   "source": [
    "# Lower triangular\n",
    "rows = 5\n",
    "for i in range(1, rows + 1):\n",
    "    print(\"* \" * i)\n",
    "\n",
    "print()  # Separator\n",
    "\n",
    "# Upper triangular\n",
    "for i in range(rows, 0, -1):\n",
    "    print(\"* \" * i)\n",
    "\n",
    "print()  # Separator\n",
    "\n",
    "# Pyramid\n",
    "for i in range(1, rows + 1):\n",
    "    print(\" \" * (rows - i) + \"* \" * i)"
   ]
  }
